{
  "name": "lightrail/lightrail-client",
  "description": "Client library for the Lightrail API (www.lightrail.com)",
  "keywords": [
    "lightrail",
    "payment processing",
    "gift card",
    "account credits"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Lightrail Integration Team",
      "email": "tana.j@lightrail.com"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": ">=5.5",
    "firebase/php-jwt": "^5.0"
  },
  "require-dev": {
    "phpunit/phpunit": "5.7.x-dev",
    "vlucas/phpdotenv": "^2.5@dev",
    "squizlabs/php_codesniffer": "^3.0@dev"
  },
  "autoload": {
    "psr-4": {
      "Lightrail\\": "lib/"
    }
  },
  "scripts": {
    "lint": "phpcs --standard=PSR2 lib/",
    "test": "phpunit"
  }
}
